<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp"
    android:backgroundTint="#DFDEDC"
    app:cardCornerRadius="@dimen/ten_dp"
    app:cardElevation="@dimen/five_dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dp">

        <!-- LinearLayout to hold TextViews horizontal -->
        <LinearLayout
            android:id="@+id/event_linear"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirtyfive_dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="RelativeOverlap">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/event_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/purple_700"
                android:text="@string/eventType"
                android:gravity="start|center"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <!-- time TextView -->
            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/ten_dp"
                android:text="@string/time"
                android:textSize="@dimen/fourteen_sp" />

        </LinearLayout>
        <!--   Button_Delete  -->
        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="@dimen/forty_eight_dp"
            android:layout_height="@dimen/forty_eight_dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/ten_dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/delete"
            android:src="@drawable/edit"
            android:scaleType="center" />
        <RelativeLayout
            android:id="@+id/event_linear11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_linear"
            android:orientation="horizontal">
            <!-- name TextView -->
           <TextView
               android:id="@+id/event_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/event_name"
               android:textColor="@color/black"
               android:textSize="@dimen/eighteen_sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/event_linear12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_linear11">
            <!-- Description TextView -->
            <TextView
                android:id="@+id/event_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_toStartOf="@+id/button_delete"
                android:gravity="start|center"
                android:text="@string/event_name"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />
            <!--   Button_Delete  -->
            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="@dimen/forty_eight_dp"
                android:layout_height="@dimen/forty_eight_dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/delete"
                android:src="@drawable/delete"
                android:scaleType="center" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>