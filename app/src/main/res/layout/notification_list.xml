<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_200"
    android:layout_marginEnd="@dimen/ten_dp"
    android:layout_marginStart="@dimen/ten_dp"
    android:layout_marginTop="@dimen/ten_dp"
    app:cardCornerRadius="@dimen/ten_dp"
    app:cardElevation="@dimen/five_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ten_dp">

        <!-- LinearLayout to hold TextViews horizontal -->
        <LinearLayout
            android:id="@+id/event_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thirtyfive_dp"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/Notify_event_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/purple_700"
                android:text="@string/eventType"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_weight="0.6"
                tools:ignore="NestedWeights" />
            
            <!-- date TextView -->
            <TextView
                android:id="@+id/Notify_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/five_dp"
                android:textAlignment="textEnd"
                android:layout_weight="1.4"
                android:text="@string/time"
                android:textSize="@dimen/fourteen_sp" />

        </LinearLayout>

            <!-- name TextView -->
        <TextView
            android:id="@+id/Notify_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name"
            android:textColor="@color/black"
            android:layout_below="@+id/event_linear"
            android:textSize="@dimen/eighteen_sp"
            tools:ignore="RelativeOverlap" />
        <RelativeLayout
            android:id="@+id/event_linear11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Notify_event_name"
            android:orientation="horizontal">
            <!-- Description TextView -->
            <TextView
                android:id="@+id/Notify_event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/event_name"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                android:layout_marginTop="@dimen/ten_dp"
                />
            <!--   Button_Delete  -->
            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="@dimen/forty_eight_dp"
                android:layout_height="@dimen/forty_eight_dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/eight_dp"
                android:layout_marginEnd="@dimen/ten_dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/delete"
                android:src="@drawable/delete"
                android:scaleType="center" />
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>