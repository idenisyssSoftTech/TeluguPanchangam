<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item android:drawable="@android:color/white" />

    <!-- Border for the cell -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/red" /> <!-- Background color for cell -->
            <stroke
                android:width="5dp"
                android:color="#CCCCCC" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>